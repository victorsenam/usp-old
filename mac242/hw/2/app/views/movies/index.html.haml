-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag request.original_url, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]"
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{:class => (@sorting=='title'?'hilite':'')}
        %a{:href => "/movies/sort/title", :id => "title_header"} Movie Title
      %th Rating
      %th{:class => (@sorting=='release_date'?'hilite':'')}
        %a{:href => "/movies/sort/release_date", :id => "release_date_header"} Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
