-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag request.original_url, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "1", (@ratings.include?rating)
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{:class => (@sorting=='title'?'hilite':'')}
        %a{:id => "title_header"}= link_to 'Title', movies_path(request.params.merge(sort: @sorting!='title'?'title':''))
      %th Rating
      %th{:class => (@sorting=='release_date'?'hilite':'')}
        %a{:id => "release_date_header"}= link_to 'Release Date', movies_path(request.params.merge(sort: @sorting!='release_date'?'release_date':''))
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
